# SimRule UI - Production Environment Configuration

# API Configuration
# In production, use relative paths or configure via environment injection
VITE_API_BASE_URL=/api/v1
VITE_WS_BASE_URL=wss://simrule-api.example.com/ws

# Feature Flags
VITE_ENABLE_AUTH=true
VITE_ENABLE_PWA=true

# Logging
VITE_LOG_LEVEL=error

# Default Settings
VITE_AUTO_REFRESH_INTERVAL=60000
VITE_REQUEST_TIMEOUT=30000
VITE_DEFAULT_PAGE_SIZE=20

# Application Info
VITE_APP_NAME=SimRule UI
VITE_APP_VERSION=0.1.0
