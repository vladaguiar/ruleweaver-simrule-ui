# SimRule UI - Docker Environment Configuration
# Used when running in Docker container alongside simrule-api

# API Configuration
# Use service name for Docker networking
VITE_API_BASE_URL=http://simrule-api:8081/api/v1
VITE_WS_BASE_URL=ws://simrule-api:8081/ws

# Feature Flags
VITE_ENABLE_AUTH=false
VITE_ENABLE_PWA=true

# Logging
VITE_LOG_LEVEL=info

# Default Settings
VITE_AUTO_REFRESH_INTERVAL=30000
VITE_REQUEST_TIMEOUT=15000
VITE_DEFAULT_PAGE_SIZE=10

# Application Info
VITE_APP_NAME=SimRule UI
VITE_APP_VERSION=0.1.0
