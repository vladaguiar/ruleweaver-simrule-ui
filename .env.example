# SimRule UI - Environment Configuration Template
# Copy this file to .env.local and customize for your environment
# .env.local is gitignored and takes precedence over other .env files

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Base URL for SimRule API
# Development: http://localhost:8081/api/v1
# Docker: http://simrule-api:8081/api/v1
# Production: https://your-domain.com/api/v1
VITE_API_BASE_URL=http://localhost:8081/api/v1

# WebSocket URL for real-time simulation updates
# Development: ws://localhost:8081/ws
# Docker: ws://simrule-api:8081/ws
# Production: wss://your-domain.com/ws
VITE_WS_BASE_URL=ws://localhost:8081/ws

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable authentication (requires OAuth2 setup)
VITE_ENABLE_AUTH=false

# Enable/disable Progressive Web App features
VITE_ENABLE_PWA=false

# =============================================================================
# LOGGING
# =============================================================================

# Log level: debug, info, warn, error
VITE_LOG_LEVEL=debug

# =============================================================================
# DEFAULT SETTINGS
# =============================================================================

# Auto-refresh interval for dashboard (in milliseconds)
# 0 = disabled, 15000 = 15 seconds, 30000 = 30 seconds, 60000 = 1 minute
VITE_AUTO_REFRESH_INTERVAL=30000

# API request timeout (in milliseconds)
VITE_REQUEST_TIMEOUT=10000

# Default page size for paginated tables
VITE_DEFAULT_PAGE_SIZE=10

# =============================================================================
# APPLICATION INFO
# =============================================================================

VITE_APP_NAME=SimRule UI
VITE_APP_VERSION=0.1.0
